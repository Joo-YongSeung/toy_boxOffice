<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/coment2"
            app:layout_constraintVertical_bias="0.0">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
            android:text="한줄 메모"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coment2"
            app:layout_constraintBottom_toTopOf="@+id/editMemo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            android:layout_marginBottom="8dp"/>
    <EditText
            android:layout_width="370dp"
            android:layout_height="49dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:hint="내용을 입력해주세요."
            android:ems="10"
            android:id="@+id/editMemo"
            app:layout_constraintBottom_toTopOf="@+id/saveButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.609"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="리뷰 작성 완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>