<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNo"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.761"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"/>

    <TextView
            android:text="메모 내용 표시"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textContent"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintStart_toEndOf="@+id/textNo"
            app:layout_constraintEnd_toStartOf="@+id/deleteButton" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="삭제"
            android:layout_width="62dp"
            android:layout_height="43dp"
            android:id="@+id/deleteButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" android:layout_marginTop="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
